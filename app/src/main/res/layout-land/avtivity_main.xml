<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="temps"
        android:id="@+id/temps"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="847dp"
        android:layout_marginEnd="847dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenue Elsa !"
        android:id="@+id/nom"
        android:layout_below="@+id/temps"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nom"
        android:id="@+id/base">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_1"
            android:layout_marginLeft="10px"
            android:paddingBottom="15px"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_2"
            android:layout_marginLeft="15px"
            android:paddingBottom="15px"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_3"
            android:layout_marginLeft="15px"
            android:paddingBottom="15px"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="240px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_4"
            android:layout_marginLeft="15px"
            android:paddingBottom="15px"></LinearLayout>

    </LinearLayout>
</RelativeLayout>