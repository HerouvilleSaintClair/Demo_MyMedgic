<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cstagiaire.demo_bloc.MainActivity"

    android:orientation="horizontal"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2100px"
        android:id="@+id/base"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_1"
            android:layout_marginRight="10px"
            android:paddingBottom="20px"
            android:layout_marginLeft="40px"
            >

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_2"
            android:layout_marginRight="10px"
            android:paddingBottom="20px">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:id="@+id/recipient_3"
            android:paddingBottom="20px">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenu Elsa"
        android:id="@+id/nom"
        android:textSize="70px"
        android:layout_below="@+id/temps"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="temps"
        android:textSize="70px"
        android:id="@+id/temps"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>